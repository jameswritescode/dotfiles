{
  "coc.preferences.formatOnSaveFiletypes": ["elixir", "rust"],

  "codeLens.enable": true,

  "diagnostic.errorSign": "●",
  "diagnostic.hintSign": "☞",
  "diagnostic.infoSign": "●",
  "diagnostic.warningSign": "●",

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },

    "docker": {
      "args": ["--stdio"],
      "command": "docker-langserver",
      "filetypes": ["dockerfile"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },

    "haskell": {
      "command": "hie-wrapper",
      "filetypes": ["hs", "haskell"]
    },

    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },

    "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    },

    "sourcekit-lsp": {
      "command": "sourcekit-lsp",
      "filetypes": ["swift"]
    },

    "sorbet": {
      "args": ["tc", "--typed", "true", "--enable-all-experimental-lsp-features", "--lsp", "--disable-watchman"],
      "command": "srb",
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"]
    },

    "tailwind-lsp": {
      "args": ["--stdio"],
      "command": "tailwindcss-language-server",
      "filetypes": ["eruby", "html", "css"],
      "rootPatterns": ["config/tailwind.config.js"],
      "settings": {
        "tailwindCSS": {
          "includeLanguages": {
            "eruby": "html"
          }
        }
      }
    }
  },

  "git.addedSign.hlGroup": "CustomCocDiffAdd",
  "git.addedSign.text": "┃",
  "git.changeRemovedSign.hlGroup": "CustomCocDiffChange",
  "git.changeRemovedSign.text": "◢",
  "git.changedSign.hlGroup": "CustomCocDiffChange",
  "git.changedSign.text": "┃",
  "git.removedSign.hlGroup": "CustomCocDiffDelete",
  "git.removedSign.text": "◢",
  "git.topRemovedSign.hlGroup": "CustomCocDiffDelete",
  "git.topRemovedSign.text": "◥",

  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.validate.enable": false,

  "solargraph.diagnostics": true,

  "suggest.maxCompleteItemCount": 12,

  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/compose_spec.json": "docker-*.yml"
  }
}
