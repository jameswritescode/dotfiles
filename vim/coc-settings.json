{
  "coc.preferences.formatOnSaveFiletypes": ["elixir"],

  "codeLens.enable": true,

  "diagnostic.errorSign": "●",
  "diagnostic.hintSign": "☞",
  "diagnostic.infoSign": "●",
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.warningSign": "●",

  "languageserver": {
    "docker": {
      "args": ["--stdio"],
      "command": "docker-langserver",
      "filetypes": ["dockerfile"]
    },

    "go": {
      "command": "gopls",
      "filetypes": ["go"],
    },

    "haskell": {
      "command": "hie-wrapper",
      "filetypes": ["hs", "haskell"],
    },

    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },

    "sorbet": {
      "args": ["tc", "--lsp", "--enable-all-experimental-lsp-features"],
      "command": "srb",
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"]
    }
  },

  "git.addedSign.hlGroup": "CustomCocDiffAdd",
  "git.addedSign.text": "┃",
  "git.changeRemovedSign.hlGroup": "CustomCocDiffChange",
  "git.changeRemovedSign.text": "◢",
  "git.changedSign.hlGroup": "CustomCocDiffChange",
  "git.changedSign.text": "┃",
  "git.removedSign.hlGroup": "CustomCocDiffDelete",
  "git.removedSign.text": "◢",
  "git.topRemovedSign.hlGroup": "CustomCocDiffDelete",
  "git.topRemovedSign.text": "◥",

  "javascript.validate.enable": false,

  "solargraph.diagnostics": true,

  "suggest.maxCompleteItemCount": 12
}
