{
  "diagnostic.enable": false,

  "git.addedSign.hlGroup": "JamesDiffAdd",
  "git.addedSign.text": "┃",
  "git.changeRemovedSign.hlGroup": "JamesDiffChange",
  "git.changeRemovedSign.text": "◢",
  "git.changedSign.hlGroup": "JamesDiffChange",
  "git.changedSign.text": "┃",
  "git.removedSign.hlGroup": "JamesDiffDelete",
  "git.removedSign.text": "◢",
  "git.topRemovedSign.hlGroup": "JamesDiffDelete",
  "git.topRemovedSign.text": "◥",

  "solargraph.useBundler": true,

  "suggest.maxCompleteItemCount": 12,

  "languageserver": {
    "cquery": {
      "command": "cquery",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".git/"]
    },

    "docker": {
      "args": ["--stdio"],
      "command": "docker-langserver",
      "filetypes": ["dockerfile"]
    },

    "elixirLS": {
      "command": "~/dotfiles/vim/langserver/elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },

    "go": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"]
    },

    "haskell": {
      "command": "hie-wrapper",
      "filetypes": ["hs", "haskell"],
      "rootPatterns": [".stack.yaml", "cabel.config", "package.yaml"]
    },

    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  }
}
