{
  "coc.preferences.formatOnSaveFiletypes": ["elixir", "rust"],

  "codeLens.enable": true,

  "diagnostic.errorSign": "●",
  "diagnostic.hintSign": "☞",
  "diagnostic.infoSign": "●",
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.warningSign": "●",

  "eslint.filetypes": ["javascript", "javascriptreact", "graphql", "typescript", "typescriptreact"],

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    },

    "docker": {
      "args": ["--stdio"],
      "command": "docker-langserver",
      "filetypes": ["dockerfile"]
    },

    "go": {
      "command": "gopls",
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },

    "haskell": {
      "command": "hie-wrapper",
      "filetypes": ["hs", "haskell"],
    },

    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },

    "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    },

    "sorbet": {
      "args": ["exec", "srb", "tc", "--lsp", "--enable-all-experimental-lsp-features"],
      "command": "bundle",
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"]
    },

    "sourcekit-lsp": {
      "command": "sourcekit-lsp",
      "filetypes": ["swift"]
    }
  },

  "git.addedSign.hlGroup": "CustomCocDiffAdd",
  "git.addedSign.text": "┃",
  "git.changeRemovedSign.hlGroup": "CustomCocDiffChange",
  "git.changeRemovedSign.text": "◢",
  "git.changedSign.hlGroup": "CustomCocDiffChange",
  "git.changedSign.text": "┃",
  "git.removedSign.hlGroup": "CustomCocDiffDelete",
  "git.removedSign.text": "◢",
  "git.topRemovedSign.hlGroup": "CustomCocDiffDelete",
  "git.topRemovedSign.text": "◥",

  "javascript.validate.enable": false,

  "solargraph.diagnostics": true,

  "suggest.maxCompleteItemCount": 12,

  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.8.json": "docker-*.yml"
  }
}
