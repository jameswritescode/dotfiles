{
  "codeLens.enable": true,

  "diagnostic.displayByAle": true,

  "languageserver": {
    "docker": {
      "args": ["--stdio"],
      "command": "docker-langserver",
      "filetypes": ["dockerfile"]
    },

    "elixirLS": {
      "command": "~/dotfiles/vim/langserver/elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },

    "flow": {
      "args": ["lsp"],
      "command": "node_modules/.bin/flow",
      "filetypes": ["javascript", "javascriptreact"],
      "requireRootPattern": true,
      "rootPatterns": [".flowconfig"]
    },

    "go": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"]
    },

    "haskell": {
      "command": "hie-wrapper",
      "filetypes": ["hs", "haskell"],
      "rootPatterns": [".stack.yaml", "cabel.config", "package.yaml"]
    },

    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },

  "git.addedSign.hlGroup": "CustomCocDiffAdd",
  "git.addedSign.text": "┃",
  "git.changeRemovedSign.hlGroup": "CustomCocDiffChange",
  "git.changeRemovedSign.text": "◢",
  "git.changedSign.hlGroup": "CustomCocDiffChange",
  "git.changedSign.text": "┃",
  "git.removedSign.hlGroup": "CustomCocDiffDelete",
  "git.removedSign.text": "◢",
  "git.topRemovedSign.hlGroup": "CustomCocDiffDelete",
  "git.topRemovedSign.text": "◥",

  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,

  "solargraph.useBundler": true,

  "suggest.maxCompleteItemCount": 12,

  "tsserver.enableJavascript": false
}
